<section class='frontpage-hero'>
	<div class="row vert-align">
		<div class="row">
			<div class="small-12 medium-6 large-5 columns">
					<h1 class="white" id="main-logo">feats</h1>
					<h2 class="white sub-heading">Celebrate completion.</h2>
			</div>
			<div class="small-8 medium-5 large-5 columns">
				<%= image_tag "https://s3-ap-southeast-2.amazonaws.com/featsmedia/tick.svg", class: 'tick-front' %>
			</div>
		</div>
	</div> 
</section>

<section class="middle-section">
	<section class="middle-title">
		<div class="row">
			<div class="small-12 columns">
				<h2 class="text-center">Every task you complete deserves a celebration.</h2>
				<h4 class="subheader text-center">Ditch 'tasks', embrace feats.</h4>
			</div>
		</div>
	</section>
	<div class="row text-center">
		<div class="large-4 medium-4 columns">
			<%= icon('plus') %>
			<h3>Add a feat</h3>
			<p>Add a 'feat', a small description of a task you have to do.</p>

		</div>
		<div class="large-4 medium-4 columns">
		<%= icon('check-square') %>
			<h3>Complete the feat</h3>
			<p>Click the checkmark next to the feat you've completed.</p>
		</div>
		<div class="large-4 medium-4 columns">
			<%= icon('trophy') %>
			<h3>Get rewarded</h3>
			<p>Enjoy rewards such as badges, new theme options and tracking of everything you've accomplished!</p>
		</div>
	</div>
</section>

<section class="get-started text-center">
	<div class="row">
		<div class="large-12 columns">
			<h2 class="">Get Started Now</h2>
		</div>
	</div>
	<div class="row">
		<div class="large-6 large-centered columns">
			<p class="">
			Create an account and start completing feats!
			</p>
		<%= button_to 'Create an Account', new_user_path, :method => :get , :form_class => "newuser", class:'button' %>
		</div>
	</div>
</section>

<footer>
	<div class="row">
		<div class="small-3 columns">

			<h6 class="white">&copy; 2014. Nicholas Matenaar</h6>
		</div>
		<div class="small-6 columns footer-icons text-right">
			<%= icon('facebook-square') %>
			<%= icon('google-plus-square') %>
			<%= icon('twitter-square') %>

		</div>

	</div>
</footer>
